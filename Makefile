TARGET=kmeans
SOURCES=$(shell echo *.cpp)
OBJECTS=$(SOURCES:.cpp=.o)
CXXFLAGS=-Wall -march=native -gdwarf-3 -std=c++1y -O3 -g
$(TARGET): $(OBJECTS)
		g++ $(OBJECTS) -o $(TARGET)
%.o: %.cpp
		g++ $(CXXFLAGS) -c $< -MT $@ -MMD -MP -MF $*.mk~
-include *.mk~
clean:
		rm -f *~
		rm -f *.o
		rm -f $(TARGET)
